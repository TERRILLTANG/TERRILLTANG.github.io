@import 'nib';
$color-primary=green;
$color-accent=grey;
$color-warn=pink;
$color-foreground=black;
$color-background=white;
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: "Oxygen", "Microsoft YaHei", monospace, sans-serif;
}

p {
  font-family: inherit;
}

a {
  color: $color-primary;
}

ul,
ol,
li {
  margin-left: 10px;
  padding-left: 10px;
}

html {
  width: 100%;
  height: 100%;
}

body {
  width: 100%;
  height: 100%;
  min-height: 100%;
}

main {
  width: 100%;
  min-height: 100%;
  margin: 0 auto;
  display: flex;
  justify-content: flex-start;
  aside {
    background: darken($color-background, 1%);
    margin-left: -300px;
    width: 300px;
    padding: 0 15px 15px;
    display: none;
    overflow-y: auto;
    -webkit-overflow-scrolling: touch;
    border-right: 1px solid lightness($color-accent, 90%);
    transition: margin-left 0.2s;
    &.show {
      margin-left: 0;
      display: block;
    }
    h1,
    a,
    span,
    router-link {
      width: 100%;
      display: inline-block;
    }
    h1 {
      line-height: 2;
      color: $color-primary;
    }
    span,
    a,
    router-link {
      font-size: 16px;
      line-height: 2;
      color: $color-accent;
      text-decoration: none;
      ellipsis();
      &:hover {
        color: $color-primary;
        cursor: pointer;
      }
    }
  }
  section {
    flex: 1;
    padding: 0 20px 50px;
    font-size: 16px;
    color: lightness($color-foreground, 40);
    line-height: 2;
    overflow-y: auto;
    -webkit-overflow-scrolling: touch;
    nav {
      min-width: 300px;
      router-link,
      a {
        line-height: 3;
        color: $color-primary;
        text-decoration: none;
        margin-right: 20px;
        &:hover {
          color: $color-accent;
          text-decoration: underline;
        }
      }
    }
    article {
      margin-top: 20px;
      overflow: hidden;
      h1 {
        color: $color-foreground;
      }
    }
  }
}

.markdown {
  padding: 15px 0;
  display: block;
  h1,
  h2,
  h3,
  h4 {
    margin: 20px 0;
    line-height: 2;
    color: $color-foreground;
  }
  h1 {
    font-size: 22px;
  }
  h2 {
    font-size: 20px;
  }
  h3 {
    font-size: 18px;
  }
  h4 {
    font-size: 16px;
  }
  a {
    color: $color-accent;
    &:hover {
      color: $color-primary;
    }
  }
  p {
    font-size: 16px;
    color: lightness($color-foreground, 20%);
    line-height: 2;
    margin: 12px auto;
    word-break: break-all;
  }
  blockquote {
    padding: 5px 15px;
    border-left: 4px solid $color-primary;
    background: lightness($color-accent, 95%);
    p {
      line-height: 1.5;
    }
  }
  i,
  em {
    color: $color-primary;
  }
  pre {
    background: darken($color-background, 4%);
    padding: 10px 20px;
    margin: 15px auto;
    line-height: 1.3;
    overflow-x: auto;
    code {
      font-family: "Ubuntu Mono", monospace;
      font-size: 16px;
      color: lightness($color-foreground, 30%);
      span {
        font-family: inherit;
      }
      .hljs {
        display: block;
        overflow-x: auto;
        padding: 0.5em;
      }
      .hljs,
      .hljs-subst {
        color: lightness($color-primary, 30%);
      }
      .hljs-comment {
        color: lightness($color-background, 75%);
      }
      .hljs-keyword,
      .hljs-attribute,
      .hljs-selector-tag,
      .hljs-meta-keyword,
      .hljs-doctag,
      .hljs-name {
        color: darken($color-warn, 20%);
      }
      .hljs-type,
      .hljs-string,
      .hljs-number,
      .hljs-selector-id,
      .hljs-selector-class,
      .hljs-quote,
      .hljs-template-tag,
      .hljs-deletion {
        color: darken($color-primary, 10%);
      }
      .hljs-title,
      .hljs-section {
        color: lightness($color-warn, 30%);
        font-weight: bold;
      }
      .hljs-regexp,
      .hljs-symbol,
      .hljs-variable,
      .hljs-template-variable,
      .hljs-link,
      .hljs-selector-attr,
      .hljs-selector-pseudo {
        color: $color-warn;
      }
      .hljs-literal {
        color: lighten($color-foreground, 30);
      }
      .hljs-built_in,
      .hljs-bullet,
      .hljs-code,
      .hljs-addition {
        color: lightness($color-background, 10);
      }
      .hljs-meta {
        color: $color-primary;
      }
      .hljs-meta-string {
        color: lighten($color-primary, 20);
      }
      .hljs-emphasis {
        font-style: italic;
      }
      .hljs-strong {
        font-weight: bold;
      }
    }
  }
}

@media screen and (max-width:900px) {
  main {
    flex-direction: column;
    aside {
      width: 100%;
      margin: 0;
      border-bottom: 1px solid lightness($color-accent, 90%);
      height: auto;
      display: none;
      translation: display 1s;
      &.show {
        display: block;
      }
    }
  }
}